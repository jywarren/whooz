<html>
<head>
<style type="text/css" media="screen">
	html {
		background:#DBDEE7;
	}
	body {
		font-family:trebuchet ms;
		font-size:12px;
		background:white;
		padding:20px;
		border:4px solid #B3BDE7;
	}
	h1 {
		font-family:georgia;
		font-size:3.8em;
		font-weight:normal;
		letter-spacing:-1px;
	}
	a {
		color:#C87026;
	}
	a:hover {
		color:#97251E;
	}
	tr {
		border-bottom:2px solid #ccc;
		margin:0;
	}
	td,th {
		text-align:left;
		padding:12px;
		border-bottom:1px solid #ccc;
		margin:0;
	}
</style>
<%= javascript_include_tag 'prototype' %>
</head>
<body>
<h1><img src="/images/logo.png"/> CRS Reports</h1>
<table>
<tr>
	<th>Phone:</th>
	<th>Time:</th>
	<th>Diaster type:</th>
	<th>Village name:</th>
	<th>Gram Panchayat:</th>
	<th>Block:</th>
	<th>District:</th>
	<th>Individuals per Household:</th>
	<th>Total Families:</th>
</tr>
<% for ping in @pings %>
<%  unless ping.crs_fields_hash['Form-id'].nil? %>
<tr>
	<td><a href="javascript:void();" onClick="$('ping_id_<%= ping.id %>').toggle();"><%= ping.twitter_username %></a></td>
	<td><%= time_ago_in_words(ping.created_at) %> ago</td>
	<td><%= ping.crs_disaster_type %></td>
	<td><%= ping.crs_village %></td>
	<td><%= ping.crs_gram_panchayat %></td>
	<td><%= ping.crs_fields_hash['block'] %></td>
	<td><%= ping.crs_fields_hash['district'] %></td>
	<td><%= ping.crs_fields_hash['individuals%5fhh'] %></td>
	<td><%= ping.crs_fields_hash['total%5ffamilies'] %></td>
</tr>
<tr style="background:#f3f3f3;display:none;font-size:.8em;" id="ping_id_<%= ping.id %>">
	<td style="text-align:right;">
		<% for field in ping.crs_fields_hash %>
		<b><%= field.first.gsub("%5f","_") %>:</b>
		<br />
		<% end %>
	</td>
	<td colspan="7">
		<% for field in ping.crs_fields_hash %>
		<%= field.last.gsub("%5f","_") %>
		<br />
		<% end %>
	</td>
</tr>
<% end %>
<% end %>
</table>
</body>
</html>