<?xml version="1.0" encoding="UTF-8"?>
<kml xmlns="http://www.opengis.net/kml/2.2">
<Document>
<% @pings.each do |ping| %>  <Placemark>
    <name><%= ping.twitter_username unless ping.twitter_username.nil? %></name>
    <description><%= ping.content.gsub('&','&amp;') %></description>
    <Point>
      <coordinates><%= ping.longitude %>,<%= ping.latitude %>,<%= ping.accuracy %></coordinates>
    </Point>
  </Placemark>
<% end %>
</Document>
</kml>